<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="easpace.App"
             xmlns:local="using:easpace"
             RequestedThemeVariant="Default">

    <!-- Global resources -->
     <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <MergeResourceInclude Source="/Styles/Themes/LightTheme.axaml" />
                 <MergeResourceInclude Source="/Styles/Themes/DarkTheme.axaml" />
                 <MergeResourceInclude Source="/Styles/Icons.axaml" />
             </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
         <FontFamily x:Key="Poppins">avares://easpace/Assets/Fonts#Poppins</FontFamily>
     </Application.Resources>         
    
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <!-- Global styles -->
        <StyleInclude Source="Styles/Global.axaml"/>
        
        <!-- AXAML styles -->
        <StyleInclude Source="Styles/TextBlock.axaml"/>
        <StyleInclude Source="Styles/TextBox.axaml"/>
        <StyleInclude Source="Styles/Button.axaml"/>
        <StyleInclude Source="Styles/Border.axaml"/>
        <StyleInclude Source="Styles/Path.axaml"/>
        
        <FluentTheme />
    </Application.Styles>
</Application>
