<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="easpace.App"
             xmlns:local="using:easpace"
             RequestedThemeVariant="Default">

    <!-- Resource settings (app colors and font) -->
     <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <MergeResourceInclude Source="/Styles/ApplicationColors.axaml" />
             </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
         <FontFamily x:Key="Poppins">avares://easpace/Assets/Fonts#Poppins</FontFamily>
     </Application.Resources>         
    
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <!-- Styles to use globally -->
        <StyleInclude Source="Styles/Global.axaml"/>
        
        <FluentTheme />
    </Application.Styles>
</Application>