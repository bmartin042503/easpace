<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:easpace.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:constants="clr-namespace:easpace.Constants"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="easpace.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="easpace"
        MinHeight="450"
        MinWidth="650">

    <Grid ColumnDefinitions="Auto,*">
        <!-- sidebar -->
        <Grid Grid.Column="0" RowDefinitions="Auto,Auto,Auto,Auto,*,Auto"
              IsVisible="{Binding IsSidebarVisible}" Background="{DynamicResource PrimaryVerticalGradient}">
            <Button Grid.Row="0"
                    Content="MENU_ITEM_MOOD"
                    Command="{Binding SetPage}"
                    CommandParameter="{x:Static constants:ApplicationPage.Mood}" />
            <Button Grid.Row="1"
                    Content="MENU_ITEM_JOURNAL"
                    Command="{Binding SetPage}"
                    CommandParameter="{x:Static constants:ApplicationPage.Journal}" />
            <Button Grid.Row="2"
                    Content="MENU_ITEM_GROWTH"
                    Command="{Binding SetPage}"
                    CommandParameter="{x:Static constants:ApplicationPage.Growth}" />
            <Button Grid.Row="3"
                    Content="MENU_ITEM_WELLNESS"
                    Command="{Binding SetPage}"
                    CommandParameter="{x:Static constants:ApplicationPage.Wellness}" />
            <Button Grid.Row="5"
                    Content="MENU_ITEM_SETTINGS"
                    Command="{Binding SetPage}"
                    CommandParameter="{x:Static constants:ApplicationPage.Settings}" />
        </Grid>

        <ContentControl Grid.Column="1"
                        x:Name="PageContent"
                        Content="{Binding CurrentPageViewModel}" />
    </Grid>

</Window>