<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:easpace.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:constants="clr-namespace:easpace.Constants"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="easpace.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        WindowStartupLocation="CenterScreen"
        Title="easpace"
        MinHeight="450"
        MinWidth="650">

    <Grid ColumnDefinitions="Auto,*">
        <!-- sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource PrimaryVerticalGradient}">
            <Border.Padding>
                <OnPlatform>
                    <OnPlatform.Default>14,14,14,14</OnPlatform.Default>
                    <OnPlatform.macOS>14,42,14,14</OnPlatform.macOS>
                </OnPlatform>
            </Border.Padding>
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto,Auto"
                  RowSpacing="20"
                  IsVisible="{Binding IsSidebarVisible}">
                <Button Grid.Row="0"
                        Content="MENU_ITEM_MOOD"
                        HorizontalAlignment="Center"
                        Command="{Binding SetPage}"
                        CommandParameter="{x:Static constants:ApplicationPage.Mood}" />
                <Button Grid.Row="1"
                        Content="MENU_ITEM_JOURNAL"
                        HorizontalAlignment="Center"
                        Command="{Binding SetPage}"
                        CommandParameter="{x:Static constants:ApplicationPage.Journal}" />
                <Button Grid.Row="2"
                        Content="MENU_ITEM_GROWTH"
                        HorizontalAlignment="Center"
                        Command="{Binding SetPage}"
                        CommandParameter="{x:Static constants:ApplicationPage.Growth}" />
                <Button Grid.Row="3"
                        Content="MENU_ITEM_WELLNESS"
                        HorizontalAlignment="Center"
                        Command="{Binding SetPage}"
                        CommandParameter="{x:Static constants:ApplicationPage.Wellness}" />
                <Button Grid.Row="5"
                        Content="MENU_ITEM_SETTINGS"
                        HorizontalAlignment="Center"
                        Command="{Binding SetPage}"
                        CommandParameter="{x:Static constants:ApplicationPage.Settings}" />
                <TextBlock Grid.Row="6"
                           Text="easpace"
                           HorizontalAlignment="Center" />
            </Grid>
        </Border>

        <ContentControl Grid.Column="1"
                        x:Name="PageContent"
                        Content="{Binding CurrentPageViewModel}" />
    </Grid>

</Window>