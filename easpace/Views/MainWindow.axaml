<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:easpace.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="easpace.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="easpace">

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>
    
    <ContentControl
        x:Name="PageContent"
        Content="{Binding CurrentPageViewModel}"
        Width="{Binding Width, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
        Height="{Binding Height, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />

</Window>
